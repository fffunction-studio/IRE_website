.expander {
  @apply overflow-hidden h-0;
  transition: $short ease;

  &.active {
    @apply h-auto;
  }

  .read-more {
    @apply mt-40 opacity-0;
    transition: $long ease;
      padding-top: 33vh;

    &.move-in {
      @apply mt-0 opacity-100;
    }
  }
}

.expander-activator {
  .expander-arrow {
    transition: $short ease;
  }

  &.active,
  &.active .expander-button {
    font-style: italic;

    &.hide-on-active {
      @apply hidden;
    }
  }

  &.active .expander-arrow {
    transform: rotate(180deg);
  }
}