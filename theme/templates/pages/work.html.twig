{% extends "core/base.html.twig" %}

{% block main %}

  <section class="section payoff pointer-events-none lg:fixed w-full header-offset z-40 text-lg md:text-xl xl:text-2xl">
    <div class="container">
      <div class="row">
        <div class="col mb-10 w-full md:w-6/12 mx-auto text-center">
          {{ post.meta("header")|no_br_mobile }}
        </div>
      </div>
    </div>
  </section>

  <div class="header-offset-extra-spacer hidden lg:block"></div>

  {% for item in post.meta("work_components") %}

    {% if item.acf_fc_layout == "big_landscape_small_portrait" %}

      <section class="section {% if loop.index0 != 0 %}mover{% endif %} big-landscape-small-portrait text-lg md:text-xl xl:text-2xl">
        <div class="container">
          <div class="row justify-center lg:justify-between{% if item.mirror %} flex-row-reverse{% endif %}">
            <div class="project col mb-10 w-full lg:w-7/12">

              <a href="{{ item.big_landscape_project.link }}">
                {% include "components/image.html.twig" with {
                  image : item.big_landscape_project.thumbnail,
                  image_class: ["regular"],
                  size: "landscape-50vw"
                } %}

                <div class="flex justify-center mt-2">
                  <p class="italic project-title">{{ item.big_landscape_project.title }}</p>
                  <p class="project-link">View Project</p>
                </div>
              </a>

            </div>
            <div class="project col mb-10 w-8/12 lg:w-3/12">

              <a href="{{ item.small_portrait_project.link }}">
                {% include "components/image.html.twig" with {
                  image : item.small_portrait_project.thumbnail,
                  image_class: ["regular"],
                  size: "portrait-25vw"
                } %}

                <div class="flex justify-center mt-2">
                  <p class="italic project-title">{{ item.small_portrait_project.title }}</p>
                  <p class="project-link">View Project</p>
                </div>
              </a>

            </div>
          </div>
        </div>
      </section>

    {% elseif item.acf_fc_layout == "big_portrait_small_landscape" %}

      <section class="section {% if loop.index0 != 0 %}mover{% endif %} big-portrait-small-landscape text-lg lg:text-xl">
        <div class="container">
          <div class="row justify-center lg:justify-between{% if item.mirror %} flex-row-reverse{% endif %}">
            <div class="project col mb-10 w-8/12 lg:w-5/12">

              <a href="{{ item.big_portrait_project.link }}">
                {% include "components/image.html.twig" with {
                  image : item.big_portrait_project.thumbnail,
                  image_class: ["regular"],
                  size: "portrait-50vw"
                } %}

                <div class="flex justify-center mt-2">
                  <p class="italic project-title">{{ item.big_portrait_project.title }}</p>
                  <p class="project-link">View Project</p>
                </div>
              </a>

            </div>
            <div class="project col mb-10 w-full lg:w-5/12">

              <a href="{{ item.small_landscape_project.link }}">
                {% include "components/image.html.twig" with {
                  image : item.small_landscape_project.thumbnail,
                  image_class: ["regular"],
                  size: "landscape-50vw"
                } %}

                <div class="flex justify-center mt-2">
                  <p class="italic project-title">{{ item.small_landscape_project.title }}</p>
                  <p class="project-link">View Project</p>
                </div>
              </a>

            </div>
          </div>
        </div>
      </section>

    {% elseif item.acf_fc_layout == "big_portrait_two_small_portraits" %}

      <section class="section {% if loop.index0 != 0 %}mover{% endif %} big-portrait-two-small-portraits text-lg lg:text-xl">
        <div class="container">
          <div class="row justify-center lg:justify-between{% if item.mirror %} flex-row-reverse{% endif %}">
            <div class="project col mb-10 w-8/12 lg:w-5/12">

              <a href="{{ item.big_portrait_project.link }}">
                {% include "components/image.html.twig" with {
                  image : item.big_portrait_project.thumbnail,
                  image_class: ["regular"],
                  size: "portrait-50vw"
                } %}
                <div class="flex justify-center mt-2">
                  <p class="italic project-title">{{ item.big_portrait_project.title }}</p>
                  <p class="project-link">View Project</p>
                </div>
              </a>

            </div>
            <div class="project col mb-10 w-8/12 lg:w-3/12">

              <a href="{{ item.small_portrait_project_first.link }}">
                {% include "components/image.html.twig" with {
                  image : item.small_portrait_project_first.thumbnail,
                  image_class: ["regular"],
                  size: "portrait-25vw"
                } %}
                <div class="flex justify-center mt-2">
                  <p class="italic project-title">{{ item.small_portrait_project_first.title }}</p>
                  <p class="project-link">View Project</p>
                </div>
              </a>

            </div>
            <div class="project col mb-10 w-8/12 lg:w-3/12">

              <a href="{{ item.small_portrait_project_second.link }}">
                {% include "components/image.html.twig" with {
                  image : item.small_portrait_project_second.thumbnail,
                  image_class: ["regular"],
                  size: "portrait-25vw"
                } %}
                <div class="flex justify-center mt-2">
                  <p class="italic project-title">{{ item.small_portrait_project_second.title }}</p>
                  <p class="project-link">View Project</p>
                </div>
              </a>

            </div>
          </div>
        </div>
      </section>

    {% endif %}

  {% endfor %}

  {% include "layout/footer.html.twig" %}

</div>

{% endblock %}