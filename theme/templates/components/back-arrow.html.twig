{% if link is not defined %}
  {% set link = "javascript:history.back()" %}
{% endif %}

<section class="section fixed w-full pointer-events-none z-20">
  <div class="container">
    <div class="row">
      <div class="col w-2/12 md:w-1/12" style="max-width: 72px">

        <div class="back-arrow flex mt-1 md:mt-2">
          <a class="pointer-events-auto pull-left" href="{{ link }}">

            <svg class="stroke-current" width="100%" height="100%" viewbox="0 0 52 21" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
              <g id="Symbols" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="square">
                <g id="Arrow-Back">
                  <g id="Group">
                    <path d="M1,10.5 L51,10.5" id="Line"></path>
                    <path d="M0.5,10.5 L10.2380314,0.761968559" id="Line-2"></path>
                    <path d="M0.5,20.5 L10.2380314,10.7619686" id="Line-2-Copy" transform="translate(5.500000, 15.500000) scale(1, -1) translate(-5.500000, -15.500000) "></path>
                  </g>
                </g>
              </g>
            </svg>

          </a>
        </div>

      </div>
    </div>
  </div>
</section>
